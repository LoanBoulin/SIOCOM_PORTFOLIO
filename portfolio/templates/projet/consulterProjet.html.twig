{% extends templateTwigParent %}

{% block titreContenu %}	
  <div class="container-fluid px-0">
      <h3 class="mb-0">{{projet.libelle}}</h3>
      <span class="text-sm text-gray-600 d-none d-sm-block"></span>

  </div>
<div class="item d-flex align-items-center">

	
  {% endblock %}

  {% block contenu %} 
  
          <section class="pb-0">
            <div class="container-fluid">
              <div class="card mb-0">
                <div class="card-body">
                  <div class="row gx-5 bg-white">
                    <!-- Item -->
                    <div class="col-xl-4 col-sm-6 py-4 border-lg-end border-gray-200">
                      <div class="d-flex align-items-stretch">
                        <div class="icon bg-violet"><i class="icon-user"></i></div>
                        <div class="mx-3">
                          <h6 class="h4 fw-light text-gray-600 mb-3">Enseignant<br>Encadrant</h6>
                        </div>
                        <div class="number">
                        {% for enseignant in projet.enseignant  %}
                          <h3><a href=""class="text-lg">{{enseignant.nom}}. {{enseignant.prenom}}</a></h3>
                        {% endfor %}
                        </div> 
                      </div>
                    </div>
                    <!-- Item -->
                    <div class="col-xl-4 col-sm-6 py-4 border-lg-end border-gray-200">
                      <div class="d-flex align-items-stretch">
                        <div class="icon bg-red"><i class="icon-user"></i></div>
                        <div class="mx-3">
                          <h6 class="h4 fw-light text-gray-600 mb-3">Matiere</h6>
                        </div>
                        <div class="number">
                        {% for matiere in projet.matiere  %}
                          <a href=""class="text-lg">{{matiere.code}},</a>
                        {% endfor %}
                        </div>
                      </div>
                    </div>
                    <!-- Item -->
                    <div class="col-xl-4 col-sm-6 py-4 border-lg-end border-gray-200">
                      <div class="d-flex align-items-stretch">
                        <div class="icon bg-green"><i class="icon-user"></i></div>
                        <div class="mx-3">
                          <h6 class="h4 fw-light text-gray-600 mb-3">Date de debut : <div class="number"><a class="text-lg">{{projet.dateDebut.format('d-m-Y')}}</a></div></h6>
                          <h6 class="h4 fw-light text-gray-600 mb-3">Date de fin : <div class="number"><a class="text-lg">{{projet.dateFin.format('d-m-Y')}}</a></div></h6>
                        </div>
                        </div>
                      </div>                    
                    </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Projects & Input Section-->
          <section class="pb-0">
            <div class="container-fluid">
              <div class="card-header position-relative row justify-content-between">
                <div class="card-close">
                  <div class="dropdown">
                    <button class="dropdown-toggle text-sm" type="button" id="closeCard1" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                    <div class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="closeCard1"><a class="dropdown-item py-1 px-3 remove" href="#"> <i class="fas fa-times"></i>Close</a><a class="dropdown-item py-1 px-3 edit" href="#"> <i class="fas fa-cog"></i>Edit</a></div>
                  </div>
                </div>
                <div class="col">
                  <h2 class="h2 mb-0 col">Liste des travaux du projet</h2>
                </div>
                <div class="col align-items-end">
                  <a class="btn btn-primary col-3 mr-2" type="submit"  href="{{ path('addGroupe')}}"> Ajouter un projet </a>
                </div>
                </div>
              </div>
              
              <br>
              <!-- Project-->
              {% for groupe in projet.groupe  %}
              <div class="card mb-3">
                <div class="card-body p-3">
                  <div class="row align-items-center gx-lg-5 gy-3">
                    <div class="col-lg-6 border-lg-end">
                      <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                          <div class="ms-3">
                            <div class="p-3 d-flex align-items-center">
                              <div class="ms-3">
                                <a class="d-block" href="#">{{groupe.libelle}}</a>
                                {% for user in groupe.userId  %}
                                  <small class="text-gray-500">{{user.etudiant.prenom}} {{user.etudiant.nom}}, </small> 
                                {% endfor %}
                              </div>         
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-2">
                      <div class="align-items-center">
                           <button class="btn btn-primary col" type="submit">Rejoindre le groupe du projet</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mb-0">
              </div>
              {% endfor %}
            </div>            
          </section>

  <div class="m-4">
  {% endblock %}  